<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InventoryActivity">

    <TextView
        android:id="@+id/inventory"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="10dp"
        android:text="@string/inventory"
        android:textAlignment="center"
        android:textColor="@color/sunset3"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/bug_tower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/bug" />

    <TextView
        android:id="@+id/num_bug"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="70dp"
        android:text="0"
        android:textColor="@color/sunset3"
        android:textSize="34sp" />


    <ImageView
        android:id="@+id/root_kit_tower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/rootkit" />

    <TextView
        android:id="@+id/num_root_kit"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="120dp"
        android:text="0"
        android:textColor="@color/sunset3"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/virus_tower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="170dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/virus" />

    <TextView
        android:id="@+id/num_virus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="170dp"
        android:text="0"
        android:textColor="@color/sunset3"
        android:textSize="34sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/tron5"
        android:onClick="previousScreen"
        android:text="@string/previous_shop"
        android:textColor="@color/sunset3"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/buy_root_kit" />

    <TextView
        android:id="@+id/text_power_upgrade"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        android:text="Power Upgrade"
        android:textColor="@color/sunset3"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/text_range_upgrade"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="260dp"
        android:text="Range Upgrade"
        android:textColor="@color/sunset3"
        android:textSize="28sp" />

    <CheckBox
        android:id="@+id/checkbox_power_upgrade"
        android:buttonTint="@color/sunset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="230dp"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/checkbox_range_upgrade"
        android:buttonTint="@color/sunset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="270dp"
        android:clickable="false"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
